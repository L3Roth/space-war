{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "Node",
    "allowJs": true,
    "isolatedModules": true,

    /* Path Configuration */
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },

    /* Output Settings */
    "outDir": "./dist",
    "rootDir": "./src",
    "noEmit": false
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
